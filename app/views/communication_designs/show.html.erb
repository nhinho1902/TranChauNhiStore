      <li>
        <p class="font-semibold">Task name:</p>
        <p><%= @communication_design.Task_Name %></p>
      </li>
      <li>
        <p class="font-semibold">Description:</p>
        <p><%= @communication_design.Description %></p>
      </li>
      <li>
        <p class="font-semibold">File:</p>
        <p><%= @communication_design.File %></p>
      </li>
      <li>
        <p class="font-semibold">Person in charge:</p>
        <p><%= @communication_design.Person_in_Charge %></p>
      </li>
      <li>
        <p class="font-semibold">Note:</p>
        <p><%= @communication_design.Note %></p>
      </li>
  </ul>
</div>
