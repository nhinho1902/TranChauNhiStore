        <%= form.label :File, class: label_class %>
          <%= form.file_field :File, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :Social_Networking_Platform, class: label_class %>
          <%= form.text_area :Social_Networking_Platform, class: input_class %>
