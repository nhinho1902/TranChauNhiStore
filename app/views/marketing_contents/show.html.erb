<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Marketing_content</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to marketing_contents_path, class: button_class(theme: "transparent") do %>
      All Marketing_contents
      <% end %>
      <%= link_to edit_marketing_content_path(@marketing_content), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Marcom id:</p>
        <p><%= @marketing_content.Marcom_ID %></p>
      </li>
      <li>
        <p class="font-semibold">Content name:</p>
        <p><%= @marketing_content.Content_Name %></p>
      </li>
      <li>
        <p class="font-semibold">Description:</p>
        <p><%= @marketing_content.Description %></p>
      </li>
      <li>
        <p class="font-semibold">File:</p>
        <p><%= @marketing_content.File %></p>
      </li>
      <li>
        <p class="font-semibold">Social networking platform:</p>
        <p><%= @marketing_content.Social_Networking_Platform %></p>
      </li>
      <li>
        <p class="font-semibold">Deadline:</p>
        <p><%= @marketing_content.Deadline %></p>
      </li>
      <li>
        <p class="font-semibold">Person in charge:</p>
        <p><%= @marketing_content.Person_in_Charge %></p>
      </li>
      <li>
        <p class="font-semibold">Note:</p>
        <p><%= @marketing_content.Note %></p>
      </li>
  </ul>
</div>
