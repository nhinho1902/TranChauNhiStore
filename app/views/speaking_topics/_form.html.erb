        <%= form.label :Topic_Name, class: label_class %>
          <%= form.text_area :Topic_Name, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :Description, class: label_class %>
          <%= form.text_area :Description, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :Image_File, class: label_class %>
          <%= form.file_field :Image_File, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :Video_Url, class: label_class %>
          <%= form.text_field :Video_Url, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :Workspace_Link, class: label_class %>
          <%= form.text_field :Workspace_Link, class: input_class %>
