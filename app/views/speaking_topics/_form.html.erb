<%= form_with(model: speaking_topic) do |form| %>
<% if speaking_topic.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(speaking_topic.errors.count, "error") %> prohibited this speaking_topic from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% speaking_topic.errors.full_messages.each do |message| %>
